---
import Background from "@components/Background";
import Layout from "./Layout.astro";
import { ArrowLeft } from "react-bootstrap-icons";

const { back, ...props } = Astro.props;
---

<Layout {...props}>
  <Background>
    <div class="w-full min-h-screen flex justify-center">
      <div class="bg-zinc-800 w-screen max-w-4xl p-7 flex flex-col gap-3">
        <a
          href={back}
          class="flex items-center gap-1 text-sm opacity-60 hover:opacity-50 max-w-fit"
        >
          <ArrowLeft /> Go Back
        </a>
        <slot />
      </div>
    </div>
  </Background>
</Layout>
